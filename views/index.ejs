<body>
<div class="container">
    
    <form action="add-stock" method="post"> 
        <label>name:</label>
        <input type="text" name="name" id="name"/>
        <label>quantity:</label>
        <input type="text" name="quantity" id="quantity"/>
        <input type="submit" class="btn btn-primary" style="margin-bottom:10px" onclick="return check()"/>
    </form>
    <form action="/stocks" method="get" >
      
      Search
      <select name="pick" id="pick">
          <option value="Name">Name</option>
          <option value="Quantity">Quantity</option>
      </select>
        :
      
      <input type="search" name="searchstocks" id="searchstocks">
      <input type="submit" class="btn btn-warning" style="margin-bottom:10px" onclick="picker()" value="搜尋">
      
    </form>
  
  <table class="table table-striped table-bordered">
    <tr>
      <th>序號</th>
      <th>名稱</th>
      <th>數量</th>
      <th>操作</th>
    </tr>
    
  <%for (var stock in stocks){%>  
  <tr>
    <td> <%=stocks[stock].stock_id%> </td>
      <td> <%=stocks[stock].name%> </td>
      <td> <%=stocks[stock].quantity%></td>
      
      <td>
          <form method="get" action="stocks/<%=stocks[stock].stock_id%>">
            <input type="submit" class="btn btn-primary" value="編輯"/>
            </form>
        <form method="post" action="deletestocks/<%=stocks[stock].stock_id%>">
          <input type="submit" class="btn btn-danger" value="刪除">
          </form>
        </td>
  </tr>
    <%}%>
    
  </table> 
</div>

